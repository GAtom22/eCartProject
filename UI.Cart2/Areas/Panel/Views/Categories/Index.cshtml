@model IEnumerable<Entities.Cart.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}


<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Listado  | <a href="/Admin/Categories/Create">Nueva</a></h3>
                    <br />

                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="dataTableEjemplo" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CategoryName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CategoryName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        <i class="fas fa-edit"></i>
                                        <a href="/Admin/Categories/Edit/@item.CategoryID">Editar</a> |
                                        <i class="far fa-eye"></i>
                                        <a href="/Admin/Categories/Details/@item.CategoryID">Detalles</a><i class="fas fa-trash-alt"></i>
                              <a href="/Admin/Categories/Delete/@item.CategoryID">Eliminar</a></td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->


        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
