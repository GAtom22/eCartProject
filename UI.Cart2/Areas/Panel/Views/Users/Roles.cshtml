
@{
    ViewBag.Title = "Roles";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Shopping Cart</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">User Roles</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 10%">
                                ID
                            </th>
                            <th style="width: 15%">
                                User name
                            </th>
                            <th style="width: 20%">
                                Email
                            </th>
                            <th class="text-center">
                                Role
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- ADD EACH ITEM DATA -->
                        @foreach (var i in Model)
                        {
                            <tr>
                                <td>
                                    @i.Id
                                </td>
                                <td>
                                    @i.UserName
                                </td>
                                <td>
                                   @i.Email
                                </td>
                                <td class="project-state">
                                    @foreach(var rol in @i.AspNetRoles){
                                    <span>rol.Name </span>
                                    }
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="@Url.Action("Details", "Users", new { id = @i.Id })">
                                        <i class="fas fa-folder">
                                        </i>
                                        View
                                    </a>
                                    <a class="btn btn-info btn-sm" href="@Url.Action("Edit", "Users", new { id = @i.Id })">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Edit
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Users", new { id = @i.Id })">
                                        <i class="fas fa-trash">
                                        </i>
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->

</div>